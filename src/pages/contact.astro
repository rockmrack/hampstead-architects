---
import BaseLayout from '../layouts/BaseLayout.astro';
import InquiryWizard from '../components/InquiryWizard';
---

<BaseLayout
  title="Start Your Project - Hampstead Architects"
  description="Book a consultation at Palace Court, 250 Finchley Road, NW3 6DN. Begin your architectural journey with our project inquiry wizard."
  schemaType="ContactPage"
>
  <!-- Hero -->
  <section class="section-padding min-h-[40vh] flex items-center bg-warm-stone">
    <div class="grid-editorial w-full">
      <div class="col-span-12 lg:col-span-10 mx-auto text-center">
        <h1 class="text-balance mb-6">
          Start Your Application
        </h1>
        <p class="text-xl leading-relaxed text-charcoal/80 max-w-3xl mx-auto">
          Answer five quick questions. We'll match you with the perfect architect and schedule your consultation at Palace Court.
        </p>
        <p class="text-sm text-charcoal/60 mt-4 italic">
          Takes approximately 2 minutes. No commitment required.
        </p>
      </div>
    </div>
  </section>

  <!-- Two Column: Wizard + Info -->
  <section class="section-padding">
    <div class="grid-editorial">
      <!-- Project Inquiry Wizard -->
      <div class="col-span-12 lg:col-span-7">
        <InquiryWizard client:load />
      </div>

      <!-- Contact Info Sidebar -->
      <div class="col-span-12 lg:col-span-4 lg:col-start-9 mt-12 lg:mt-0">
        <div class="sticky top-32 space-y-8">
          <!-- Visit Us -->
          <div>
            <h3 class="text-sm uppercase tracking-wider text-charcoal/50 mb-4">Visit Us</h3>
            <address class="not-italic leading-relaxed">
              <strong class="block mb-2">Palace Court</strong>
              250 Finchley Road<br>
              Hampstead, London<br>
              NW3 6DN
            </address>
            <p class="text-sm text-charcoal/60 mt-4 italic">
              By appointment only
            </p>
          </div>

          <!-- Contact -->
          <div>
            <h3 class="text-sm uppercase tracking-wider text-charcoal/50 mb-4">Questions?</h3>
            <p class="leading-relaxed">
              <a href="tel:+442071234567" class="hover:text-oxidized-copper transition-colors">020 7123 4567</a><br>
              <a href="mailto:hello@hampsteadarchitects.co.uk" class="hover:text-oxidized-copper transition-colors">hello@hampsteadarchitects.co.uk</a>
            </p>
          </div>

          <!-- Consultation Hours -->
          <div>
            <h3 class="text-sm uppercase tracking-wider text-charcoal/50 mb-4">Consultation Hours</h3>
            <p class="leading-relaxed text-sm">
              Monday - Friday: 9am - 6pm<br>
              Saturday: 10am - 4pm<br>
              Sunday: Closed
            </p>
          </div>

          <!-- What to Expect -->
          <div class="pt-8 border-t border-charcoal/10">
            <h3 class="text-sm uppercase tracking-wider text-charcoal/50 mb-4">What to Expect</h3>
            <ul class="space-y-3 text-sm text-charcoal/70">
              <li class="flex gap-2">
                <span class="text-oxidized-copper">✓</span>
                <span>Response within 24 hours</span>
              </li>
              <li class="flex gap-2">
                <span class="text-oxidized-copper">✓</span>
                <span>Feasibility review of your site</span>
              </li>
              <li class="flex gap-2">
                <span class="text-oxidized-copper">✓</span>
                <span>In-person consultation at Palace Court</span>
              </li>
              <li class="flex gap-2">
                <span class="text-oxidized-copper">✓</span>
                <span>Matched with specialist architect</span>
              </li>
              <li class="flex gap-2">
                <span class="text-oxidized-copper">✓</span>
                <span>No sales pressure - honest advice only</span>
              </li>
            </ul>
          </div>

          <!-- Map Placeholder -->
          <div class="img-framed aspect-square">
            <div class="w-full h-full bg-warm-stone flex items-center justify-center text-charcoal/30">
              <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Signals -->
  <section class="section-padding bg-oxidized-copper text-off-white">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-serif font-light mb-6">
        Trusted by Hampstead's Most Discerning Homeowners
      </h2>
      <p class="text-lg leading-relaxed opacity-90 mb-8">
        Our curated network includes RIBA Chartered architects, conservation specialists, and structural engineers. Each one vetted for technical excellence and planning expertise.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
        <div>
          <div class="text-4xl font-serif mb-2">15+</div>
          <div class="text-sm uppercase tracking-wider opacity-80">Years Experience</div>
        </div>
        <div>
          <div class="text-4xl font-serif mb-2">100%</div>
          <div class="text-sm uppercase tracking-wider opacity-80">Planning Success Rate</div>
        </div>
        <div>
          <div class="text-4xl font-serif mb-2">£50M+</div>
          <div class="text-sm uppercase tracking-wider opacity-80">Projects Delivered</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
