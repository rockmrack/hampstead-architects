---
import { Image } from 'astro:assets';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden" aria-labelledby="hero-heading">
  <!-- Background Image with Parallax -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/hero-fallback.jpg"
      alt="Architectural detail"
      class="w-full h-full object-cover opacity-90 scale-105 animate-subtle-zoom"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-warm-stone/20 to-warm-stone/80 mix-blend-multiply"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 grid-editorial w-full px-6 md:px-12 max-w-screen-3xl mx-auto">
    <div class="col-span-12 lg:col-span-8 flex flex-col justify-center">
      <h1 id="hero-heading" class="text-balance font-serif font-light text-5xl md:text-7xl lg:text-8xl leading-[0.9] tracking-tight text-charcoal mb-8 opacity-0 animate-fade-up">
        Architecture,<br>
        <span class="italic text-bronze">Curated.</span>
      </h1>
      
      <p class="text-lg md:text-xl text-charcoal/80 max-w-xl opacity-0 animate-fade-up animation-delay-200">
        We match your project with North West London's finest specialist architects and interior designers.
      </p>

      <div class="mt-10 opacity-0 animate-fade-up animation-delay-400">
        <a href="/process" class="btn-primary group relative overflow-hidden">
          <span class="relative z-10">Discover Our Process</span>
          <div class="absolute inset-0 bg-bronze transform -translate-x-full transition-transform duration-300 ease-out group-hover:translate-x-0"></div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes subtle-zoom {
    0% { transform: scale(1.05); }
    100% { transform: scale(1.1); }
  }

  .animate-subtle-zoom {
    animation: subtle-zoom 20s infinite alternate ease-in-out;
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fade-up 1s ease-out forwards;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }
</style>
