// Footer component
---

<footer class="section-padding bg-warm-stone mt-section" role="contentinfo">
  <div class="grid-editorial">
    <!-- Brand Column -->
    <div class="col-span-12 md:col-span-4">
      <h3 class="font-serif text-2xl mb-6">Hampstead Architects</h3>
      <p class="text-sm leading-relaxed text-charcoal/70">
        Part of the Hampstead Renovations Group.<br>
        We design what we can build.
      </p>
    </div>

    <!-- Address Column -->
    <div class="col-span-12 md:col-span-4 mt-8 md:mt-0">
      <h4 class="font-sans text-xs uppercase tracking-wider mb-4 text-charcoal/50">Visit Us</h4>
      <address class="not-italic text-sm leading-relaxed">
        Palace Court<br>
        250 Finchley Road<br>
        Hampstead, London<br>
        NW3 6DN
      </address>
    </div>

    <!-- Contact Column -->
    <div class="col-span-12 md:col-span-4 mt-8 md:mt-0">
      <h4 class="font-sans text-xs uppercase tracking-wider mb-4 text-charcoal/50">Get in Touch</h4>
      <p class="text-sm leading-relaxed">
        <a href="tel:+442071234567" class="hover:text-oxidized-copper transition-colors">020 7123 4567</a><br>
        <a href="mailto:hello@hampsteadarchitects.co.uk" class="hover:text-oxidized-copper transition-colors">hello@hampsteadarchitects.co.uk</a>
      </p>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="mt-16 pt-8 border-t border-charcoal/10 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-charcoal/50">
    <p>&copy; {new Date().getFullYear()} Hampstead Architects. All rights reserved.</p>

    <div class="flex gap-6">
      <a href="/privacy" class="hover:text-oxidized-copper transition-colors">Privacy Policy</a>
      <a href="/terms" class="hover:text-oxidized-copper transition-colors">Terms of Service</a>
    </div>
  </div>

  <!-- Accreditations -->
  <div class="mt-8 pt-8 border-t border-charcoal/10">
    <p class="text-xs text-charcoal/40 text-center">
      Registered with RIBA · Approved by English Heritage · Camden Conservation Area Specialists
    </p>
  </div>
</footer>
